<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.fx3.ClassTeacherDetailsController"
            prefHeight="400.0" prefWidth="600.0">

    <Label text="Group Name:" />
    <Label fx:id="groupNameLabel" />

    <Label text="Max Number:" />
    <Label fx:id="maxNumberLabel" />

    <TableView fx:id="teachersTableView" prefWidth="600" prefHeight="400">
        <columns>
            <TableColumn fx:id="teacherFirstNameColumn" text="First Name" prefWidth="100"/>
            <TableColumn fx:id="teacherLastNameColumn" text="Last Name" prefWidth="100"/>
            <TableColumn fx:id="teacherConditionColumn" text="Condition" prefWidth="100"/>
            <TableColumn fx:id="teacherYearOfBirthColumn" text="Year of Birth" prefWidth="100"/>
            <TableColumn fx:id="teacherSalaryColumn" text="Salary" prefWidth="100"/>
        </columns>
    </TableView>

</AnchorPane>
